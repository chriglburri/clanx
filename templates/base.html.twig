      <script type="text/javascript">
        //https://github.com/stevekwan/best-practices/blob/master/javascript/best-practices.md#anonymously-scope-javascript-if-youre-never-going-to-call-it-elsewhere
        (function(){
            $(document).ready(function() {
                // I think we have tooltips on each page. so lets make this global.
                Clanx.AppBundle.Tooltip.initialize();
            });
        })();
      </script>

      <!-- add custom scripts for each page separately: -->
      {% block javascripts %}{% endblock %}

    </head>
