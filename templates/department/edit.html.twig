{% extends 'base_nav.html.twig' %}

{% block title %}
    Ressort bearbeiten
{% endblock %}

{% block workspace %}
<div class="row">
<div class="col-md-6">
<div class="panel panel-default">
    <div class="panel-heading">
        {% set vars = {'department': department} %}
        {% include 'department/header.html.twig' with vars only %}
    </div>
    <div class="panel-body">
        {{ form_start(edit_form, {'name': 'form_department_edit'}) }}
            {{ form_widget(edit_form) }}
        {{ form_end(edit_form) }}
        {{ form_start(delete_form, {'name': 'form_department_delete'}) }}
        {{ form_end(delete_form) }}
    </div>
    <div class="panel-footer">
        <a onclick="Clanx.App.Form.submitAndLock(form_department_edit,this);"
            class="btn btn-primary"
            data-toggle="tooltip"
            title="Änderungen übernehmen und in der Datenbank speichern.">
            <span class="fa fa-floppy-o"></span>
            Speichern
        </a>
        <a class="btn btn-default"
            href="{{ path('department_show',{'id':department.id}) }}"
            data-toggle="tooltip"
            title="Nicht speichern und zurück zu {{department.name}}">
            <span class="fa fa-times"></span>
            Abbrechen
        </a>
        {% if may_delete %}
            <a onclick="Clanx.App.Form.submitAndLock(form_department_delete,this);"
                class="btn btn-danger"
                data-toggle="tooltip"
                title="{{'tip.delete_from_database'|trans}} (Geht nur, solange keine Hölfer zugewiesen sind.)">
                <span class="fa fa-trash-o"></span>
                {{'btn.delete'|trans}}
            </a>
        {% endif %}
    </div>
</div><!--panel-->
</div>
</div>
{% endblock %}

{% block javascripts %}
<script>
    $(document).ready(function(){
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>
{% endblock %}
