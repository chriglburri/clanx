{% extends 'base_nav.html.twig' %}

{% block title %}
    {{ 'title'|trans({},'question')}}
{% endblock %}

{% block workspace %}

<div class="row">
<div class="col-md-3"></div>
<div class="col-md-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            {{ 'title'|trans({},'question')}}: {{question.text}}
        </div>
        <div class="panel-body">
            {{ form_start(edit_form, {'name': 'form_question_edit'}) }}
                {{ form_widget(edit_form) }}
            {{ form_end(edit_form) }}
            {{ form_start(delete_form, {'name': 'form_question_delete'}) }}
            {{ form_end(delete_form) }}

        </div>
        <div class="panel-footer">
            <a onclick="clanx.app.Form.submitAndLock(form_question_edit,this);"
                class="btn btn-primary"
                data-toggle="tooltip"
                title="{{'tip.save_changes_to_database'|trans}}">
                <span class="fa fa-floppy-o"></span>
                {{'btn.save'|trans}}
            </a>
            <a class="btn btn-default"
                href="{{ path('event_edit',{'id':question.event.id}) }}"
                data-toggle="tooltip"
                title="{{'tip.cancel_and_return0'|trans}}">
                <span class="fa fa-times"></span>
                {{'btn.cancel'|trans}}
            </a>
            {% if may_delete %}
                <a onclick="clanx.app.Form.submitAndLock(form_question_delete,this);"
                    class="btn btn-danger"
                    data-toggle="tooltip"
                    title="{{'tip.delete_from_database'|trans}}">
                    <span class="fa fa-trash-o"></span>
                    {{'btn.delete'|trans}}
                </a>
            {% endif %}
        </div>
    </div>
</div>
</div>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function() {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
{% endblock %}
