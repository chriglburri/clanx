{% trans_default_domain 'FOSUserBundle' %}


<form
    action="{{ path('fos_user_resetting_send_email') }}"
    method="POST"
    class="fos_user_resetting_request form-inline">
    <div class="form-group">
        <label for="username">Benutzername oder EMail</label>
        <input
            class="form-control"
            type="text"
            id="username"
            name="username"
            required="required" />

    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-default">
            <span class="fa fa-envelope-o"></span>
            EMail schicken
        </button>
    </div>
</form>

{% if invalid_username is defined %}
    <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
        Sorry. Der Benutzername oder Mailadresse <strong>{{invalid_username}}</strong>
        ist uns leider nicht bekannt.
    </div>
{% endif %}
