{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
<div class="row">
<div class="col-md-4 col-md-offset-4">
    <h2>Clanx Helfer DB</h2>
</div>
</div>
<div class="row">
<div class="col-md-4 col-md-offset-4">
    <div class="panel panel-default">
    <div class="panel-heading">
        Registrieren
    </div>
        <div class="panel-body">
            {{ form_start(form, {
                    'method': 'post',
                    'action': path('fos_user_registration_register'),
                    'attr': {'class': 'fos_user_registration_register'}}) }}
            {{ form_widget(form) }}

            <button type="submit" class="btn btn-primary">
                <span class="glyphicon glyphicon-floppy-disk"></span>
                {{ 'registration.submit'|trans }}
            </button>
            <a class="btn btn-default pull-right"
                href="{{path('info_privacy_policy')}}"
                target="_blank"
                >
                <span class="glyphicon glyphicon-lock"></span>
                Datenschutzerkl√§rung
            </a>
                    {{ form_end(form) }}

            <hr />
            Du bist schon ein Benutzer?
            <a class="btn btn-primary btn-large pull-right"
                href="{{ path('fos_user_security_login')}} ">
                <span class="glyphicon glyphicon-user"></span>
                Anmelden
            </a>
        </div>

    </div>
</div>
</div>
</div>

{% endblock fos_user_content %}
