{% extends 'base_nav.html.twig' %}

{% block title %} Send Mail
{% endblock %}

{% block workspace %}

<div class="row">
<div class="col-md-7">
    <div class="panel panel-primary">
        <div class="panel-heading">Mail schreiben
        </div> <!-- heading -->

        {{ form_start(mail_form, {
            'action': path('mail_send'),
            'method': 'POST',
            'name': 'form_mail_edit'
        }) }}

        <div class="panel-body">
            {{form_widget(mail_form) }}
        </div><!-- body -->
        <div class="panel-footer">
            <a class="btn btn-primary"
                onclick="form_mail_edit.submit();">
                <span class="glyphicon glyphicon-envelope"></span>
                Senden
            </a>
            <a class="btn btn-default"
                href="{{ path('mail_abort') }}">
                <span class="glyphicon glyphicon-remove"></span>
                Abbrechen
            </a>
        </div> <!-- footer -->
        {{ form_end(mail_form)}}
    </div>

</div><!-- col -->
<div class="col-md-5">
    <div class="panel panel-default">
        <div class="panel-heading">
            Metadata
        </div>
        <div class="panel-body">
            {% if mail.recipient %}
                <p><strong>Emf√§nger:</strong> <mark>{{mail.recipient}}</mark></p>
            {% endif %}

            {% if mail.sender %}
                <p><strong>Sender:</strong> <mark>{{mail.sender}}</mark>
            {% endif %}
            {% if mail.ccs %}
                <p><strong>CC:</strong></p>
                <ul>
                    {% for adr,name in mail.ccs %}
                    <li>{{ name }} &lt;{{adr}}&gt;</li>
                    {% endfor %}
                </ul>
            {% endif %}

            {% if mail.bccs %}
                <p><strong>BCC:</strong></p>
                <ul>
                    {% for adr,name in mail.bccs %}
                    <li>{{ name }} &lt;{{adr}}&gt;</li>
                    {% endfor %}
                </ul>
            {% endif %}

        </div><!-- body -->
    </div><!-- panel -->
</div><!-- col -->
</div><!-- row -->

{% endblock %}
