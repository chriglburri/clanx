{% extends 'base_nav.html.twig' %}

{% block title %} Event bearbeiten {% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/datepicker.js')}}"></script>
{% endblock %}

{% block workspace %}
<div class="row">
    <div class="col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                {% set vars = {'event' : event} %}
                {% include 'event/header.html.twig' with vars only %}
            </div>
            <div class="panel-body">
                {{ form_start(edit_form, {'name': 'form_event_edit'}) }}
                    {{form_widget(edit_form) }}
                {{ form_end(edit_form) }}
            </div>
            <div class="panel-footer">
                <a class="btn btn-primary"
                    onclick="Clanx.AppBundle.Form.submitAndLock(form_event_edit,this);"
                    data-toggle="tooltip"
                    title="{{'tip.save_and_return1'|trans({'%entity%':event.name,})}}">
                    <span class="fa fa-floppy-o"></span>
                    {{'btn.save'|trans}}
                </a>
                <a class="btn btn-default"
                    href="{{ path('event_show',{'id':event.id}) }}"
                    data-toggle="tooltip"
                    title="{{'tip.cancel_and_return1'|trans({'%entity%':event.name,})}}">
                    <span class="fa fa-times"></span>
                    {{'btn.cancel'|trans}}
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        {% if event.departments %}
            {{ render(controller('AppBundle:EventDepartment:listDepartments', { 'id': event.id })) }}
        {% elseif event.commitments %}
            {{ render(controller('AppBundle:EventCommitment:listCommitment', { 'id': event.id })) }}
        {% endif %}

        {{ render(controller('AppBundle:EventQuestion:questionsList', { 'id': event.id })) }}


    </div>
</div>
{% endblock %}
