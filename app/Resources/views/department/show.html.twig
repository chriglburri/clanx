{% extends 'base_nav.html.twig' %}

{% block title %}
Ressort: {{ department.name }}
{% endblock %}

{% block workspace %}
<div class="row">
<div class="col-md-12">
<div class="panel panel-default">
    <div class="panel-heading">
        Ressort: {{ department.name }}
    </div>
    <div class="panel-body">

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ department.name }}</td>
            </tr>
            <tr>
                <th>Requirement</th>
                <td>{{ department.requirement }}</td>
            </tr>
            {% if is_granted('ROLE_SUPER_ADMIN')%}
            <tr>
                <th>Id</th>
                <td>{{ department.id }}</td>
            </tr>
            {% endif %}
        </tbody>
    </table>
    <div class="panel-footer">
        <a class="btn btn-default" type="button"
            href="{{ path('event_show',{'id':event.id}) }}">Zurück zum Event.</a>
        {% if is_granted('ROLE_ADMIN') %}
        <a class="btn btn-default" type="button"
            href="{{ path('department_edit', { 'id': department.id ,'event_id':event.id}) }}">Bearbeiten</a>
        {% endif %}
        {% if mayDelete %}
            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Löschen"></input>
            {{ form_end(delete_form) }}
        {% endif %}
    </div>
{% endblock %}
