{% extends 'base_nav.html.twig' %}

{% block title %}
    Einsatz bearbeiten
{% endblock %}

{% block workspace %}
<div class="row">
<div class="col-md-6 col-md-offset-3">
    <h3>Mein Einsatz: <em>„{{ department.name }}“</em></h3>
    <h4>am Event <em>„{{ event.name }}“</em></h4>

    {{ form_start(edit_form, {'name': 'form_commitment_edit'}) }}
        {{ form_widget(edit_form) }}
    {{ form_end(edit_form) }}

    <a onclick="form_commitment_edit.submit();"
        class="btn btn-primary">
        <span class="glyphicon glyphicon-floppy-disk"></span>
        Speichern
    </a>

    <a class="btn btn-default"
        href="{{ path('event_show',{'id':event.id}) }}">
        <span class="glyphicon glyphicon-remove"></span>
        Abbrechen
    </a>

    {% if may_delete %}
        <a onclick="form_commitment_delete.submit();"
            class="btn btn-danger">
            <span class="glyphicon glyphicon-trash"></span>
            Löschen <span class="small">(Nicht mehr helfen)</span>
        </a>
        {{ form_start(delete_form, {'name': 'form_commitment_delete'}) }}
        {{ form_end(delete_form) }}
    {% else %}
        <a class="btn btn-default" disabled="disabled">
            Löschen nicht mehr möglich
        </a>
    {% endif %}
</div>
</div>
{% endblock %}
