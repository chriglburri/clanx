<!DOCTYPE html>
<html lang="de">
  <head>
      <meta charset="utf-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="viewport" content="width=device-width, initial-scale=1">

      <title>{% block title %}Sönd Willkomm!{% endblock %}</title>

      <meta name="description" content="{% block description %}{% endblock %}">
      <meta name="author" content="LayoutIt!">

      <!-- use bootstrap on each page -->
      <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
      <!-- this is our global stylesheet that we use on each page -->
      <link href="{{ asset('css/global.css') }}" rel="stylesheet">
      <!-- add custom stylesheets for each page separately: -->
      <link href="{{ asset('css/duty.css') }}" rel="stylesheet">


      {% block stylesheets %}{% endblock %}

      
      {% block javascripts %}
      <link rel="icon" type="image/png" href="{{ asset('img/favicon.png') }}" />
      <script src="{{ asset('js/jquery-2.2.3.js') }}" type="text/javascript"></script>
      <script src="{{ asset('js/bootstrap.min.js') }}" type="text/javascript"></script>
      <!-- use other stuff on every page -->
      <script src="{{ asset('js/jquery.sortable.js') }}" type="text/javascript"></script>
      <script src="{{ asset('js/underscore.js') }}" type="text/javascript"></script>
      <script src="{{ asset('js/handlebars.js') }}" type="text/javascript"></script>
      <script src="{{ asset('js/backbone-1.3.3.js') }}" type="text/javascript"></script>
      {% endblock %}

    </head>
    <body>
        {% if app.request.hasPreviousSession %}
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="alert alert-{{ type }} alert-dismissable">
        			    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        				<strong>{{ type }}!</strong> {{ message }}
        			</div>
                {% endfor %}
            {% endfor %}
        {% endif %}
        
        {% block body %}{% endblock %}

        <!-- this is our global script that we use on each page -->

    </body>
</html>
